namespace glm
{
    template <typename T> 
    inline _xvec3<T> triangleNormalGTX(const _xvec3<T>& p1, const _xvec3<T>& p2, const _xvec3<T>& p3)
    {
        return normalize(cross(p1 - p2, p1 - p3));
    }
}
